<%- include('partials/header') %>

<div class="container-xl mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center py-3">
      <h3 class="card-title h2 mb-0">Proxy Hosts</h3>
      <div class="d-flex gap-2">
        <div class="input-icon">
          <span class="input-icon-addon">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><circle cx="10" cy="10" r="7" /><line x1="21" y1="21" x2="15" y2="15" /></svg>
          </span>
          <input type="text" class="form-control" placeholder="Search..." style="background: #16171d; border-color: #333; width: 200px;">
        </div>
        <button class="btn btn-npm-primary" data-bs-toggle="modal" data-bs-target="#modal-new-route">
          Add Proxy Host
        </button>
      </div>
    </div>
    
    <div class="table-responsive">
      <table class="table table-vcenter card-table">
        <thead>
          <tr>
            <th class="w-1"></th> <th>Source</th>
            <th>Destination</th>
            <th>Status</th>
            <th class="w-1"></th> </tr>
        </thead>
        <tbody>
          <% routes.forEach(function(route) { %>
          <tr>
            <td>
              <span class="avatar bg-secondary-lt">MC</span>
            </td>
            <td>
              <div class="d-flex flex-column">
                <span class="text-white-strong mb-1">
                  <span class="chip-domain"><%= route.sourceDomain || 'Qualquer Domínio' %></span>
                </span>
                <small class="text-muted">Porta Externa: <%= route.listeningPort %></small>
              </div>
            </td>
            <td>
              <div class="text-white-strong"><%= route.serverAddress %></div>
              <% if(route.description) { %>
                <div class="text-muted small"><%= route.description %></div>
              <% } %>
            </td>
            <td>
              <span class="badge-online">
                <span class="dot-online"></span> Online
              </span>
            </td>
            <td>
              <div class="dropdown">
                <button class="btn btn-icon btn-ghost-secondary" data-bs-toggle="dropdown">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="1" /><circle cx="12" cy="19" r="1" /><circle cx="12" cy="5" r="1" /></svg>
                </button>
                <div class="dropdown-menu dropdown-menu-end bg-dark border-secondary">
                  <form action="/routes/delete/<%= route.id %>" method="POST" onsubmit="return confirm('Deletar rota?');">
                      <button type="submit" class="dropdown-item text-danger">Delete</button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }); %>
          <% if (routes.length === 0) { %>
              <tr><td colspan="5" class="text-center py-5 text-muted">Nenhum Proxy Host configurado.</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="modal modal-blur fade" id="modal-new-route" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
    <form action="/routes/add" method="POST">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add Proxy Host</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            
            <div class="mb-3">
                <label class="form-label">Domain Names (Endereço de Entrada)</label>
                <input type="text" class="form-control" name="sourceDomain" placeholder="mc.exemplo.com" required>
                <small class="form-hint">Domínio que os jogadores usarão para conectar.</small>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <div class="mb-3">
                        <label class="form-label">Porta de Entrada</label>
                        <input type="number" class="form-control" name="listeningPort" placeholder="25565" required>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="mb-3">
                        <label class="form-label">Forward Hostname / IP</label>
                        <input type="text" class="form-control" name="serverAddress" placeholder="192.168.1.50:25565" required>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="mb-3">
                        <label class="form-label">Scheme</label>
                        <select class="form-select bg-dark text-white border-secondary" disabled>
                            <option selected>TCP</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label">Descrição (Opcional)</label>
                <input type="text" class="form-control" name="description" placeholder="">
            </div>

            <div class="mt-3">
                <label class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" checked disabled>
                    <span class="form-check-label">Block Common Exploits</span>
                </label>
                <label class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" checked disabled>
                    <span class="form-check-label">Websockets Support</span>
                </label>
            </div>

        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">Cancel</a>
            <button type="submit" class="btn btn-npm-primary ms-auto">Save</button>
        </div>
        </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>