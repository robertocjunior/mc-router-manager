<%- include('partials/header') %>

<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">Minecraft Routes</h2>
      </div>
      <div class="col-auto ms-auto d-print-none">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal-new-route">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="12" y1="5" x2="12" y2="19" /><line x1="5" y1="12" x2="19" y2="12" /></svg>
          Add Route
        </button>
      </div>
    </div>
  </div>
</div>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="table-responsive">
        <table class="table table-vcenter card-table">
          <thead>
            <tr>
              <th>Ingress (Source)</th>
              <th>Destination (Server)</th>
              <th>Description</th>
              <th>Status</th>
              <th class="w-1"></th>
            </tr>
          </thead>
          <tbody>
            <% routes.forEach(function(route) { %>
            <tr>
              <td>
                <div class="d-flex flex-column">
                  <span class="font-weight-bold mb-1"><%= route.sourceDomain || 'Any / Wildcard' %></span>
                  <div class="text-muted small">
                    Port: <span class="chip-addr"><%= route.listeningPort %></span>
                  </div>
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                   <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-arrow-right text-muted me-2" width="20" height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="5" y1="12" x2="19" y2="12" /><line x1="13" y1="18" x2="19" y2="12" /><line x1="13" y1="6" x2="19" y2="12" /></svg>
                   <span class="chip-addr"><%= route.destHost %>:<%= route.destPort %></span>
                </div>
              </td>
              <td class="text-muted"><%= route.description || '-' %></td>
              <td>
                <span class="badge bg-success me-1"></span> Online
              </td>
              <td>
                <form action="/routes/delete/<%= route.id %>" method="POST" onsubmit="return confirm('Are you sure?');">
                    <button type="submit" class="btn btn-ghost-danger btn-icon" title="Delete">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><line x1="4" y1="7" x2="20" y2="7" /><line x1="10" y1="11" x2="10" y2="17" /><line x1="14" y1="11" x2="14" y2="17" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
                    </button>
                </form>
              </td>
            </tr>
            <% }); %>
            <% if (routes.length === 0) { %>
                <tr><td colspan="5" class="text-center py-5 text-muted">No routes configured.</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="modal modal-blur fade" id="modal-new-route" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <form action="/routes/add" method="POST">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">New Proxy Route</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            
            <div class="row mb-3">
                <div class="col-12 mb-2"><label class="form-label text-primary">Ingress Settings (Where the player connects)</label></div>
                <div class="col-lg-8">
                    <label class="form-label">Ingress Address (Domain)</label>
                    <input type="text" class="form-control" name="sourceDomain" placeholder="play.myserver.com">
                </div>
                <div class="col-lg-4">
                    <label class="form-label">Ingress Port</label>
                    <input type="number" class="form-control" name="listeningPort" placeholder="25565" required>
                </div>
            </div>

            <hr class="my-4">

            <div class="row mb-3">
                <div class="col-12 mb-2"><label class="form-label text-green">Destination Settings (Where the server is)</label></div>
                <div class="col-lg-8">
                    <label class="form-label">Server IP or Address</label>
                    <input type="text" class="form-control" name="destHost" placeholder="192.168.1.50" required>
                </div>
                <div class="col-lg-4">
                    <label class="form-label">Server Port</label>
                    <input type="number" class="form-control" name="destPort" placeholder="25565" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" name="description" placeholder="Ex: Main Survival">
            </div>

        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-link link-secondary" data-bs-dismiss="modal">Cancel</a>
            <button type="submit" class="btn btn-primary ms-auto">Save Route</button>
        </div>
        </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>